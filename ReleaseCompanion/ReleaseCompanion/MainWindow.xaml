<Window  x:Class="ReleaseCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReleaseCompanion"
        mc:Ignorable="d"
        Title="Release Companion" Height="550" Width="750" WindowStartupLocation="CenterScreen" Activated="Window_Activated" ResizeMode="NoResize" Background="FloralWhite">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="450" />
        </Grid.RowDefinitions>        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Height="40" Grid.Row="0" Grid.Column="0" Content="Release Companion" FontSize="24" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalContentAlignment="Left" />
            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Height="40" Grid.Row="0" Grid.Column="0" Content="Current User:" FontWeight="Bold" VerticalAlignment="Center" HorizontalContentAlignment="Right" />
                <Label Name="userName" Height="40" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Left" VerticalAlignment="Center" MouseDoubleClick="userName_MouseDoubleClick" />
            </Grid>            
        </Grid>
        <TabControl Grid.Row="1" Grid.ColumnSpan="2">
            <TabItem Header="Environment Details">
                <Grid Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="320" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <DataGrid Name="environments_grid" Grid.Row="0" AutoGenerateColumns="False" AlternatingRowBackground="LightGray" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" />
                            <DataGridTextColumn Header="Environment Name" Binding="{Binding Name}" />
                            <DataGridCheckBoxColumn Header="Backup ?" Binding="{Binding Backup}" />
                            <DataGridCheckBoxColumn Header="Release ?" Binding="{Binding Release}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Name="Release_btn" Click="Button_Click" Content="Start Release" Grid.Row="1" Margin="100,10,100,10" />
                    <ProgressBar Name="progressBar" Grid.Row="1" Visibility="Hidden" Margin="0,10,0,10" />
                    <TextBlock Name="progressLabel" Grid.Row="2" />
                </Grid>
            </TabItem>
            <TabItem Header="AppSettings">
                <Grid Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="320" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CheckBox Name="appSettingRequired" Content="Required?" Grid.Row="0" Click="appSettingRequired_Checked" />
                    <DataGrid Name="appSettings_grid" Grid.Row="1" Grid.ColumnSpan="3" AutoGenerateColumns="False" AlternatingRowBackground="LightGray" CanUserAddRows="True" CanUserDeleteRows="True" SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Key" Width="200" Binding="{Binding Key}" />
                            <DataGridTextColumn Header="Value" Width="200" Binding="{Binding Value}" />
                            <DataGridTextColumn Header="Environments" Width="200" Binding="{Binding Environments}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>

</Window>
